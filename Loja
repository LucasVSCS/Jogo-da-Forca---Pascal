  gotoxy(23,5);
  writeln('=');
  gotoxy(39,5);
  writeln('=');
  gotoxy(23,4);
  writeln('=================');
  gotoxy(23,6);
  writeln('=================');
  gotoxy(25,5);
  writeln('Premio Ouro');
  gotoxy(25,8);
  writeln('60 Pontos');
  
  
  gotoxy(43,5);
  writeln('=');
  gotoxy(59,5);
  writeln('=');
  gotoxy(43,4);
  writeln('=================');
  gotoxy(43,6);
