  gotoxy(1,28);
  writeln('2: Para Premio Ouro');
  gotoxy(1,30);
  writeln('3: Para Premio Diamante');
  
  
  writeln();
  writeln(' ');
  gotoxy(1,32);
  writeln ('Você tem: ',pontos,' pontos');
  
  gotoxy(4,1);
  writeln ('===========================Loja=========================');
  
  
  gotoxy(4,5);
  writeln('=');
