//Procedimento pro menu de assunto: biologia
procedure menu_biologia();
begin
  gotoxy (50,1);
  writeln('  ____ _____ ____  _      ____   _____ _____           ');
  gotoxy (50,2);
  writeln(' |  _ \_   _/ __ \| |    / __ \ / ____|_   _|   /\     ');
  gotoxy (50,3);
  writeln(' | |_) || || |  | | |   | |  | | |  __  | |    /  \    ');
  gotoxy (50,4);
  writeln(' |  _ < | || |  | | |   | |  | | | |_ | | |   / /\ \   ');
  gotoxy (50,5);
  writeln(' | |_) || || |__| | |___| |__| | |__| |_| |_ / ____ \  ');
  gotoxy (50,6);
  writeln(' |____/_____\____/|______\____/ \_____|_____/_/    \_\ ');
  
  writeln;
  writeln;
  writeln;
  writeln('  ___ ___ ___ ___ ___ _   _ _    ___   _   ___  ___ ___  ');
  writeln(' |   \_ _| __|_ _/ __| | | | |  |   \ /_\ |   \| __/ __| ');
  writeln(' | |) | || _| | | (__| |_| | |__| |) / _ \| |) | _|\__ \ ');
  writeln(' |___/___|_| |___\___|\___/|____|___/_/ \_\___/|___|___/ ');
  
  
  writeln;
  writeln;
  writeln;
  writeln;
  writeln;
  writeln('  _         ___ __ ___ ___ _     ');
  writeln(' / |  ___  | __/_// __|_ _| |    ');
  writeln(' | | |___| | _/--\ (__ | || |__  ');
  writeln(' |_|       |_/_/\_\___|___|____| ');
  
  writeln('  ___         ___ _  _ _____ ___ ___ __  __ ___ ___ ___   __ ___ ___ ___    ');
  writeln(' |_  )  ___  |_ _| \| |_   _| __| _ \  \/  | __|   \_ _| /_/| _ \_ _/ _ \   ');
  writeln('  / /  |___|  | || .` | | | | _||   / |\/| | _|| |) | | /--\|   /| | (_) |  ');
  writeln(' /___|       |___|_|\_| |_| |___|_|_\_|  |_|___|___/___/_/\_\_|_\___\___/   ');
  
  writeln('  ____        ___ ___ ___ __  ___ ___ _  ');
  writeln(' |__ /  ___  |   \_ _| __/_/ / __|_ _| |   ');
  writeln('  |_ \ |___| | |) | || _|_ _| (__ | || |__ ');
  writeln(' |___/       |___/___|_||___|\___|___|____|');
  
  
  
  readln (opcao_dificuldade);
  clrscr;
  
  case opcao_dificuldade of
    1:
    begin
      writeln ('===================DICA=====================');
      writeln;
      i:= 10;
      condicional();
    end;
    
    2:
    begin
      writeln ('===================DICA=====================');
      writeln;
      i:= 11;
      condicional();
    end;
    
    3:
    begin
      writeln ('===================DICA=====================');
      writeln;
      i:= 12;
      condicional();
    end;
  end;
end;

//Procedimento pro menu principal
procedure menu_principal ();
begin
  gotoxy (50,1);
  writeln('       _ _    _ _____           _____   ');
  gotoxy (50,2);
  writeln('      | | |  | |  __ \   /\    / ____|  ');
  gotoxy (50,3);
  writeln('      | | |  | | |  | | /  \  | (___    ');
  gotoxy (50,4);
  writeln('  _   | | |  | | |  | |/ /\ \  \___ \   ');
  gotoxy (50,5);
  writeln(' | |__| | |__| | |__| / ____ \ ____) |  ');
  gotoxy (50,6);
  writeln('  \____/ \____/|_____/_/    \_\_____/   ');
  boneco();
  
  writeln('  _          ___ ___  __  __ ___ ___   _   ___    ');
  writeln(' / |  ___   / __/ _ \|  \/  | __/ __| /_\ | _ \   ');
  writeln(' | | |___| | (_| (_) | |\/| | _| (__ / _ \|   /   ');
  writeln(' |_|        \___\___/|_|  |_|___\___/_/ \_\_|_\   ');
  writeln('                                 )_)              ');
  
  writeln('  ___         ___ _  _ _____ ___ _   _  ___  /\/|___ ___   ');
  writeln(' |_  )  ___  |_ _| \| |_   _| _ \ | | |/ __||/\/| __/ __|  ');
  writeln('  / /  |___|  | || .` | | | |   / |_| | (__/ __ \ _|\__ \  ');
  writeln(' /___|       |___|_|\_| |_| |_|_\\___/ \___\____/___|___/  ');
  writeln('                                        )_)                ');
  
  
  writeln('  ____        _    ___     _  _     ');
  writeln(' |__ /  ___  | |  / _ \ _ | |/_\    ');
  writeln('  |_ \ |___| | |_| (_) | || / _ \   ');
  writeln(' |___/       |____\___/ \__/_/ \_\  ');
  
  
  //Recebe a opção digitada pelo usuário e limpa a tela
  readln (opcao_menu);
  
  
  clrscr;
  
  //Caso ele escolha a primeira opção, começa o jogo
  case opcao_menu of
    1:
    begin
      gotoxy (35,1);
      writeln('  ___ ___  ___ ___  _    _  _   _         _   _ __  __          _   ___ ___ _   _ _  _ _____ ___    ');
      gotoxy (35,2);
      writeln(' | __/ __|/ __/ _ \| |  | || | /_\       | | | |  \/  |        /_\ / __/ __| | | | \| |_   _/ _ \   ');
      gotoxy (35,3);
      writeln(' | _|\__ \ (_| (_) | |__| __ |/ _ \      | |_| | |\/| |       / _ \\__ \__ \ |_| | .` | | || (_) |  ');
      gotoxy (35,4);
      writeln(' |___|___/\___\___/|____|_||_/_/ \_\      \___/|_|  |_|      /_/ \_\___/___/\___/|_|\_| |_| \___/   ');
      
      boneco();
      
      writeln('  _         ___ _  _ _____ ___ ___ _____ ___ ___ ___ __  __ ___ _  _ _____ ___   ');
      writeln(' / |  ___  | __| \| |_   _| _ \ __|_   _| __| _ \_ _|  \/  | __| \| |_   _/ _ \  ');
      writeln(' | | |___| | _|| .` | | | |   / _|  | | | _||   /| || |\/| | _|| .` | | || (_) | ');
      writeln(' |_|       |___|_|\_| |_| |_|_\___| |_| |___|_|_\___|_|  |_|___|_|\_| |_| \___/  ');
      
      writeln('  ___         _      __  ___ ___ ___   _    ');
      writeln(' |_  )  ___  | |   _/_/ / __|_ _/ __| /_\   ');
      writeln('  / /  |___| | |__/ __ \ (_ || | (__ / _ \  ');
      writeln(' /___|       |____\____/\___|___\___/_/ \_\ ');
      
      writeln('  ____        _  _ ___ ___ _____  __ ___ ___   _    ');
      writeln(' |__ /  ___  | || |_ _/ __|_   _|/_/| _ \_ _| /_\   ');
      writeln('  |_ \ |___| | __ || |\__ \ | |/ __ \   /| | / _ \  ');
      writeln(' |___/       |_||_|___|___/ |_|\____/_|_\___/_/ \_\ ');
      
      writeln('  _ _          ___ ___ ___  _    ___   ___ ___   _    ');
      writeln(' | | |   ___  | _ )_ _/ _ \| |  / _ \ / __|_ _| /_\   ');
      writeln(' |_  _| |___| | _ \| | (_) | |_| (_) | (_ || | / _ \  ');
      writeln('   |_|        |___/___\___/|____\___/ \___|___/_/ \_\ ');
      
      
      //Recebe a opção digitada pelo usuário e limpa a tela
      readln (opcao_assunto);
      clrscr;
      
      //Caso escolha a primeira opção, vai para o menu de dificuldade das perguntas na área do entreterimento
      if (opcao_assunto = 1) then
      begin
        menu_entreterimento();
      end
      
      //Caso escolha a segunda opção, vai para o menu de dificuldade das perguntas na área de lógica
      else
      if (opcao_assunto = 2) then
      begin
        menu_logica();
      end
      
      //Caso escolha a terceira opção, vai para o menu de dificuldade das perguntas na área da história
      else
      if (opcao_assunto = 3) then
      begin
        menu_historia();
      end
      
      //Caso escolha a quarta opção, vai para o menu de dificuldades das perguntas na área da biologia
      else
      if (opcao_assunto = 4) then
      begin
        menu_biologia();
      end
    end;
    //Caso escolha a segunda opção no menu principal, abre as instruções
    2:
    begin
      writeln ('======================Instruções==================');
      writeln;
      write ('O objetivo deste jogo é descobrir uma palavra adivinhando suas letras.');
      write ('Após escolher o tema e a dificuldade, o jogador irá escolher uma letra que suspeite fazer parte da palavra.');
      write ('Caso a palavra contenha esta letra, será mostrado em que posição (ões) ela está. Entretanto, caso esta letra não exista na palavra, será desenhada uma parte do corpo do boneco do jogador. ');
      write ('Se todas as 6 partes do corpo do boneco estiverem desenhadas, o jogador perderá.');
      writeln;
      writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
      readln (opcao);
      if (opcao = 's') then
      begin
        clrscr;
        exit;
      end
      else
      if (opcao = 'n') then
      begin
        halt;
      end;
    end;
    
    //Caso escolha a terceira opção no menu principal, abre a loja
    3:
    begin
      writeln ('=========================Loja=======================');
      gotoxy(1,24);
      writeln('Escolha sua opção de acordo com seus Pontos');
      gotoxy(1,26);
      writeln('1: Para Premio Prata');
      gotoxy(1,28);
      writeln('2: Para Premio Ouro');
      gotoxy(1,30);
      writeln('3: Para Premio Platina');
      
      
      writeln();
      writeln(' ');
      gotoxy(1,32);
      writeln ('Você tem: ',pontos,' pontos');
      
      gotoxy(4,1);
      writeln ('===========================Loja=========================');
      
      
      gotoxy(4,5);
      writeln('=');
      gotoxy(20,5);
      writeln('=');
      gotoxy(4,6);
      writeln('=================');
      gotoxy(4,4);
      writeln('=================');
      gotoxy(5,5);
      writeln ('Premio Prata');
      gotoxy(5,8);
      writeln('30 Pontos');
      
      gotoxy(23,5);
      writeln('=');
      gotoxy(39,5);
      writeln('=');
      gotoxy(23,4);
      writeln('=================');
      gotoxy(23,6);
      writeln('=================');
      gotoxy(25,5);
      writeln('Premio Ouro');
      gotoxy(25,8);
      writeln('60 Pontos');
      
      
      gotoxy(43,5);
      writeln('=');
      gotoxy(59,5);
      writeln('=');
      gotoxy(43,4);
      writeln('=================');
      gotoxy(43,6);
      writeln('=================');
      gotoxy(45,5);
      writeln('Premio Platina');
      gotoxy(45,8);
      writeln('90 Pontos');
      
      gotoxy(1,20);
      readln(Loja);
      
      if (loja = 1) and (pontos >= 30) then
      begin
        gotoxy(5,12);
        writeln('Premio Prata: ');
        gotoxy(5,14);
        writeln('APOSTILA C - https://goo.gl/7LoHKt');
        pontos:= pontos - 30;
        writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
        readln (opcao);
        if (opcao = 's') then
        begin
          clrscr;
          exit;
        end
        else
        if (opcao = 'n') then
        begin
          halt;
        end;
      end
      else
      if (loja = 1) and (pontos < 30) then
      begin
        writeln ('Pontos insuficientes');
        writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
        readln (opcao);
        if (opcao = 's') then
        begin
          clrscr;
          exit;
        end
        else
        if (opcao = 'n') then
        begin
          halt;
        end;
      end
      
      else
      if (loja = 2) and (pontos >= 60) then
      begin
        gotoxy(5,12);
        writeln('Premio Ouro: ');
        gotoxy(5,14);
        writeln('APOSTILA HTML5 - https://goo.gl/SUac3C');
        writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
        readln (opcao);
        if (opcao = 's') then
        begin
          clrscr;
          exit;
        end
        else
        if (opcao = 'n') then
        begin
          halt;
        end;;
      end
      else
      if (loja = 2) and (pontos < 60) then
      begin
        writeln ('Pontos insuficientes');
        writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
        readln (opcao);
        if (opcao = 's') then
        begin
          clrscr;
          exit;
        end
        else
        if (opcao = 'n') then
        begin
          halt;
        end;
      end
      
      else
      if (loja = 3) and (pontos >= 90) then
      begin
        gotoxy(5,12);
        writeln('Premio Platina: ');
        gotoxy(5,14);
        writeln('APOSTILA JAVA - https://goo.gl/FCcR4W');
        writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
        readln (opcao);
        if (opcao = 's') then
        begin
          clrscr;
          exit;
        end
        else
        if (opcao = 'n') then
        begin
          halt;
        end;
      end
      else
      if (loja = 3) and (pontos < 90) then
      begin
        writeln ('Pontos insuficientes');
        writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
        readln (opcao);
        if (opcao = 's') then
        begin
          clrscr;
          exit;
        end
        else
        if (opcao = 'n') then
        begin
          halt;
        end;
      end
    end;
  end;
