//Procedimento para a condicional das perguntas, caso ele erre, o boneco ganha uma parte do corpo, caso ele acerte, ganha 10 pontos
//e é solicitado se ele deseja voltar para o menu principal
procedure condicional();
begin
  repeat
    begin
      tentativa := 0;
      forca();
      writeln (pergunta[i]);
      readln (resp);
      clrscr;
      if (resp <> resposta[i]) then
      begin
        tentativa := tentativa + 1
      end
      else
      if (resp = resposta[i]) then
      begin
        writeln ('Você acertou');
        boneco_feliz();
        pontos := pontos + 10;
        writeln ('Pontos: ', pontos);
        writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
        readln (opcao);
        if (opcao = 's') then
        begin
          exit
        end
        else
        if (opcao = 'n') then
        begin
          halt;
        end;
      end;
      
      if (tentativa = 1) then
      begin
        writeln ('===================DICA=====================');
        writeln;
        boneco_cabeca();
        writeln (pergunta[i]);
        readln (resp);
        
        if (resp = resposta[i]) then
        begin
          clrscr;
          writeln ('Você acertou');
          boneco_feliz();
          pontos := pontos + 10;
          writeln ('Pontos: ', pontos);
          writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
          readln (opcao);
          if (opcao = 's') then
          begin
            exit
          end
          else
          if (opcao = 'n') then
          begin
            halt;
          end;
        end
        else
        if (resp <> resposta[i]) then
        begin
          tentativa := tentativa + 1
        end;
      end;
      
      if (tentativa = 2) then
      begin
        clrscr;
        writeln ('===================DICA=====================');
        writeln;
        boneco_corpo();
        writeln (pergunta[i]);
        readln (resp);
        if (resp = resposta[i]) then
        begin
          clrscr;
          writeln ('Você acertou');
          boneco_feliz();
          pontos := pontos + 10;
          writeln ('Pontos: ', pontos);
          writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
          readln (opcao);
          if (opcao = 's') then
          begin
            exit
          end
          else
          if (opcao = 'n') then
          begin
            halt;
          end;
        end
        else
        if (resp <> resposta[i]) then
        begin
          tentativa := tentativa + 1
        end;
      end;
      
      if (tentativa = 3) then
      begin
        clrscr;
        writeln ('===================DICA=====================');
        writeln;
        boneco_braco1();
        writeln (pergunta[i]);
        readln (resp);
        if (resp = resposta[i]) then
        begin
          clrscr;
          writeln ('Você acertou');
          boneco_feliz();
          pontos := pontos + 10;
          writeln ('Pontos: ', pontos);
          writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
          readln (opcao);
          if (opcao = 's') then
          begin
            exit
          end
          else
          if (opcao = 'n') then
          begin
            halt;
          end;
        end
        else
        if (resp <> resposta[i]) then
        begin
          tentativa := tentativa + 1
        end;
      end;
      
      if (tentativa = 4) then
      begin
        clrscr;
        writeln ('===================DICA=====================');
        writeln;
        boneco_braco2();
        writeln (pergunta[i]);
        readln (resp);
        if (resp = resposta[i]) then
        begin
          clrscr;
          writeln ('Você acertou');
          boneco_feliz();
          pontos := pontos + 10;
          writeln ('Pontos: ', pontos);
          writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
          readln (opcao);
          if (opcao = 's') then
          begin
            exit
          end
          else
          if (opcao = 'n') then
          begin
            halt;
          end;
        end
        else
        if (resp <> resposta[i]) then
        begin
          tentativa := tentativa + 1
        end;
      end;
      
      if (tentativa = 5) then
      begin
        clrscr;
        writeln ('===================DICA=====================');
        writeln;
        boneco_perna1();
        writeln (pergunta[i]);
        readln (resp);
        if (resp = resposta[i]) then
        begin
          clrscr;
          writeln ('Você acertou');
          boneco_feliz();
          pontos := pontos + 10;
          writeln ('Pontos: ', pontos);
          writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
          readln (opcao);
          if (opcao = 's') then
          begin
            exit
          end
          else
          if (opcao = 'n') then
          begin
            halt;
          end;
        end
        else
        if (resp <> resposta[i]) then
        begin
          tentativa := tentativa + 1
        end;
      end;
      
      if (tentativa = 6) then
      begin
        clrscr;
        boneco();
        writeln ('Você perdeu');
        writeln ('Seus pontos foram zerados');
        pontos:= 0;
        tentativa := tentativa + 1;
        writeln ('Você deseja voltar para o menu principal? S(SIM) N(NÃO)');
        readln (opcao);
        if (opcao = 's') then
        begin
          exit
        end
        else
        if (opcao = 'n') then
        begin
          halt;
        end;
      end;
    end;
  until (tentativa > 0);
end;

//Procedimento pro menu de assunto: entreterimento
procedure menu_entreterimento();
begin
  writeln ('=================Entreterimento================');
  writeln;
  writeln ('=================Dificuldade===================');
  writeln;
  writeln ('1 - Fácil');
  writeln;
  writeln ('2 - Intermediário');
  writeln;
  writeln ('3 - Difícil');
  writeln;
  readln (opcao_dificuldade);
  clrscr;
  
  case opcao_dificuldade of
    1:
    begin
      writeln ('===================DICA=====================');
      writeln;
      i:= 1;
      condicional();
    end;
    
    2:
    begin
      writeln ('===================DICA=====================');
      writeln;
      i:= 2;
      condicional();
    end;
    
    3:
    begin
      writeln ('===================DICA=====================');
      writeln;
      i:= 3;
      condicional();
    end;
  end;
end;


//Procedimento pro menu de assunto: lógica
procedure menu_logica();
begin
  writeln ('====================Lógica=====================');
  writeln;
  writeln ('=================Dificuldade===================');
  writeln;
  writeln ('1 - Fácil');
  writeln;
  writeln ('2 - Intermediário');
  writeln;
  writeln ('3 - Difícil');
  writeln;
  
  readln (opcao_dificuldade);
  clrscr;
  
  case opcao_dificuldade of
    1:
    begin
      writeln ('===================DICA=====================');
      writeln;
      i:= 4;
      condicional();
    end;
    
    2:
    begin
      writeln ('===================DICA=====================');
      writeln;
      i:= 5;
      condicional();
    end;
    
    3:
    begin
      writeln ('===================DICA=====================');
      writeln;
      i:= 6;
      condicional();
    end;
  end;
end;

